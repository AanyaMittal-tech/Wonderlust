<% if(typeof success !== 'undefined' && success.length > 0) { %>
    <div class="alert-dismissible fade show alert alert-success col-6 offset-3 mt-3" role="alert">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if(typeof error !== 'undefined' && error.length > 0) { %>
    <div class="alert-dismissible fade show alert alert-danger col-6 offset-3 mt-3" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>